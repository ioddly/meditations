{
  "name": "meditations",
  "version": "1.0.0",
  "description": "meditations is an application for tracking life progress that builds on habit formation and long term thinking.",
  "main": "electron-main.js",
  "scripts": {
    "cloc": "cloc src/**/*.ts src/*.tsx backend/*.go",
    "postinstall": "webpack -p",
    "doc-frontend": "typedoc --out docs",
    "doc-backend": "(godoc -http=:8958 &); xdg-open http://localhost:8958/pkg/github.com/ioddly/meditations/backend",
    "test-backend": "go test -v ./backend",
    "test-frontend": "./node_modules/.bin/jest",
    "manual-build": "emacs docs/manual.org --batch -f org-html-export-to-html",
    "manual-open": "xdg-open docs/manual.html"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ioddly/meditations.git"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-1.0",
  "engines": {
    "node": ">=7.10.0"
  },
  "bugs": {
    "url": "https://github.com/ioddly/meditations/issues"
  },
  "homepage": "https://github.com/ioddly/meditations#readme",
  "dependencies": {
    "@types/medium-editor": "^5.0.1",
    "@types/react": "^15.0.25",
    "@types/react-datepicker": "^0.46.0",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.41",
    "@types/react-tabs": "^1.0.0",
    "@types/redux-logger": "^3.0.0",
    "@types/websocket": "^0.0.33",
    "@typopro/web-inconsolata": "^3.4.9",
    "@typopro/web-open-sans": "^3.4.9",
    "awesome-typescript-loader": "^3.1.3",
    "bootstrap": "4.0.0-alpha.6",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.0",
    "medium-editor": "^5.23.0",
    "medium-editor-tables": "git+https://github.com/ioddly/medium-editor-tables.git",
    "moment": "^2.18.1",
    "node-sass": "^4.5.3",
    "octicons": "^3.5.0",
    "react": "^15.5.4",
    "react-datepicker": "^0.46.0",
    "react-dnd": "^2.4.0",
    "react-dnd-html5-backend": "^2.4.1",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-tabs": "^1.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "riot-route": "^3.1.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.13.1",
    "typescript": "^2.4.1",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.6.1",
    "ts-jest": "^20.0.6",
    "tslint": "^5.4.3",
    "tslint-config-airbnb": "^5.2.0"
  }
}
